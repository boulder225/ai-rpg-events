# AI-RPG Event Sourcing Platform Environment Configuration
# Copy this file to .env and fill in your actual values

# Claude AI Configuration
CLAUDE_API_KEY=your_claude_api_key_here

# Model Options (choose one):
# Claude 4 Models (Latest!):
# claude-sonnet-4-20250514     (Claude 4 Sonnet - Latest reasoning & creativity)
# claude-opus-4-20250514       (Claude 4 Opus - Most powerful)
#
# Claude 3.5 Models:
# claude-3-5-sonnet-20241022   (Claude 3.5 Sonnet - Proven for RPGs)
# claude-3-5-haiku-20241022    (Claude 3.5 Haiku - Faster & cheaper)
CLAUDE_MODEL=claude-sonnet-4-20250514

CLAUDE_MAX_TOKENS=1000
CLAUDE_TEMPERATURE=0.7

# Server Configuration
SERVER_PORT=8080
LOG_LEVEL=INFO

# Database Configuration (optional - uses in-memory by default)
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_rpg

# Rate Limiting
AI_REQUESTS_PER_MINUTE=60
AI_CACHE_TTL_MINUTES=30
